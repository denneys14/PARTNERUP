<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
  <%= link_to "/", class: "navbar-brand" do %>
    <%= image_tag "https://www.w-cs.de/partner/images/partner.jpg" %>
  <% end %>

  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>

  <h3 class="mb-0">PartnerUp!</h3>

  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <% unless ["index"].include?(params[:action]) %>
        <li class="nav-item">
          <%= link_to "Index", "/partners", class: "nav-link" %>
          <%#= link_to "Search", "#", class: "nav-link" %>
        </li>
      <% end %>
      <!-- <li class="nav-item"> add js active taggs through toggle -->
        <%#= link_to "Index", "/partners", class: "nav-link" %>
      <!-- </li> -->
      <li class="nav-item">
        <%= link_to "Add partner", "/partners/new", class: "nav-link" %>
      </li>

      <% if ["index"].include?(params[:action]) %>
          <li class="nav-item">
            <p class="nav-link" id="search-toggler">Search</p>
          </li>
      <% end %>
      <!-- <li class="nav-item"> -->
        <%#= link_to "Search", "#", class: "nav-link searchbar-toggler" %>
      <!-- </li> -->

      <li class="nav-item dropdown">
          <% if user_signed_in? %>
            <%= image_tag current_user.avatar_url, class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
          <% else %>
            <%= image_tag "https://cdn.pixabay.com/photo/2015/10/05/22/37/blank-profile-picture-973461_960_720.png", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
          <% end %>
        <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
          <% if user_signed_in? %>
            <%= link_to "lt dashboard here", "#", class: "dropdown-item" %>
            <%= link_to "edit profile", "/users/edit", class: "dropdown-item" %>
            <%= link_to "signout here", "/users/sign_out", method: :delete, data: { confirm: "Please confirm logout" }, class: "dropdown-item" %>
          <% else %>
            <%= link_to "sign-up", "/users/sign_up", class: "dropdown-item" %>
            <%= link_to "sign-in", "/users/sign_in", class: "dropdown-item" %>
          <% end %>
        </div>
      </li>
    </ul>
  </div>
</div>
