<div class="row justify-content-center">
  <div class="form-container mt-5">
    <div class="col-12">
      <h3>Add a new Partner</h3>
      <%= simple_form_for [@partner] do |f| %>
        <%= f.label :duty %>
        <%= f.text_field :duty %>
        <%= f.label :name %>
        <%= f.text_field :name %>
        <%= f.label :gender %>
        <%= f.text_field :gender %>
        <%= f.label :age %>
        <%= f.text_field :age %>
        <%= f.label :description %>
        <%= f.text_field :description %>

        <%= f.submit class: "btn btn-danger mt-3" %>
      <% end %>
      <%= link_to "Back to list", "/partners" %>
    </div>
  </div>
</div>

