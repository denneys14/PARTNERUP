<div class="container">
  <h2>Edit your partners profile</h2>

  <%= simple_form_for(@partner) do |f| %>
    <%= f.input :name %>
    <%= f.input :gender %>
    <%= f.input :duty %>
    <%= f.input :description %>
    <%= f.input :age %>
    
    <%= f.submit class: "btn btn-ghost" %>
  <% end %>

  <%= link_to "Partner", partner_path, class: "btn btn-ghost" %>
</div>

