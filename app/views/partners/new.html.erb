<div class="add-container">
  <div class="col-12">
    <h3>Add a new Partner</h3>
    <%= simple_form_for(@partner) do |f| %>
    <%= f.input :name %>
    <%= f.input :gender %>
    <%= f.input :duty %>
    <%= f.input :description %>
    <%= f.input :age %>
    <%= f.input :address %>
    <%= f.input :photo, as: :file %>
    <p>or choose from web</p>
    <%= f.input :url_photo, as: :string %>
    <%= f.submit class: "btn btn-ghost" %>
    <% end %>

  <%#= link_to "Back to list", partners_path, class: "btn btn-ghost" %>
  </div>
</div>


