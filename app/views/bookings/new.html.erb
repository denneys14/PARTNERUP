<div class="row justify-content-center">
  <div class="form-container mt-5">
    <div class="col-12">
      <h3>Make a new Booking</h3>
      <%= simple_form_for [@partner, @booking] do |f| %>
        <%= f.label :start_time %>
        <%= f.text_field :start_time %>
        <%= f.label :end_time %>
        <%= f.text_field :start_time %>

        <%= f.submit class: "btn btn-danger mt-3" %>
      <% end %>
      <%= link_to "Back to partner", "/partners/#{@partner.id}" %>
    </div>
  </div>
</div>

