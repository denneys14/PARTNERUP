
<div class="card-show" >
  <div class="card-partner ">
    <div class="card-product">
      <img src="https://i.pinimg.com/originals/79/29/51/792951a5fd18aa38ff231e7ef44b8e17.jpg">
      <div class="card-product-infos">
        <h2><%= @partner.name %></h2>
        <p>Gender: <%= @partner.gender %></p>
        <p>Age: <%= @partner.age %></p>
        <p>Duty: <%= @partner.duty %></p>
      </div>
    </div>
    <div class="card-description" >
      <h3>Description:</h3>
      <p><%= @partner.description %></p>
      <% if policy(@partner).edit? %>
        <%= link_to "Update", edit_partner_path(@partner) %> |
      <% end %>
      <% if policy(@partner).edit? %>
        <%= link_to "Remove Listing", partner_path(@partner[:id]), method: :delete, data: { confirm: "Are you sure?" } %>
      <% end %>
    </div>
  </div>

  <div class="card-booking">
    <div class="row justify-content-center">
      <div class="booking-form mt-5">
        <div class="col-12">
          <h3>Book now!</h3>
          <%= simple_form_for [@partner, @booking] do |f| %>
            <%= f.label :start_time %>
            <%= f.text_field :start_time %>
            <%= f.label :end_time %>
            <%= f.text_field :start_time %>

            <%= f.submit class: "btn btn-ghost mt-3" %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

